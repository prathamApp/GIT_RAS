<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pratham.readandspeak">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR" />

    <application
        android:name=".RASApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.splash_activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pratham.readandspeak.ui.bottom_fragment.add_student.MenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.pratham.readandspeak.ui.qr_scan.QRScanActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.pratham.readandspeak.admin_panel.group_selection.SelectGroupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.pratham.readandspeak.admin_panel.AdminControlsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.pratham.readandspeak.admin_panel.Activity_AssignGroups"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.pratham.readandspeak.ui.main_menu.ChooseLevelActivity"
            android:screenOrientation="portrait" />
<activity
            android:name="com.pratham.readandspeak.nestedRecycler.HomeActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>