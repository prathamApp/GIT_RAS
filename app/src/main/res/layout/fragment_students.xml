<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pratham.readandspeak.ui.splash_activity.SplashActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/tv_no_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_rectangle"
            android:textColor="@color/colorBlack"
            android:layout_centerInParent="true"
            android:padding="@dimen/_15sdp"
            android:textSize="@dimen/_15sdp"
            android:elevation="@dimen/_10sdp"
            android:text="No students..Please Add Students.." />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/students_recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />

      <!--  <ImageButton
            android:id="@+id/ib_add_student"
