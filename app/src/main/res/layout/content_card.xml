<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_rectangle_card"
    android:elevation="5dp"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/rl_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/content_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginHorizontal="5dp"
            android:foregroundGravity="center"
            android:src="@drawable/pratham_logo"
            android:scaleType="fitCenter" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/content_thumbnail">

            <ImageButton
                android:id="@+id/ib_action_btn"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:src="@drawable/download_icon"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/content_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_toLeftOf="@+id/ib_action_btn"
                android:text="@string/app_name"
                android:paddingTop="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>